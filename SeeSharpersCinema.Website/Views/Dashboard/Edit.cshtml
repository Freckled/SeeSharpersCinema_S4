@model Movie 

<div class="container">
    <div class="bg-primary m-1 p-1 text-white"><h4>Edit movie details</h4></div>
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>

    <form asp-action="EditMovie" method="post">
        <div class="form-group">
            <label asp-for="Title">Title</label>
            <input class="form-control" asp-for="Title" value="@Model.Title" />
        </div>
        <div class="form-group">
            <label asp-for="PosterUrl">Poster Url</label>
            <input class="form-control" asp-for="PosterUrl" value="@Model.PosterUrl" />
            @*add poster fluid thing here based on this value*@
        </div>
        <div class="form-group">
            <label asp-for="Duration">Duration</label>
            <input class="form-control" asp-for="Duration" value="@Model.Duration" />
        </div>
        <div class="form-group">
            <label asp-for="Language">Language</label>
            <input class="form-control" asp-for="Language" value="@Model.Title" />
        </div>
        <div class="form-group">
            <label asp-for="Technique">Technique</label>
            <input class="form-control" asp-for="Technique" value="@Model.Technique" />
        </div>
        <div class="form-group">
            <label asp-for="Description">Description</label>
            <input class="form-control" asp-for="Description" value="@Model.Description" />
        </div>
        <div class="form-group">
            <label asp-for="ViewIndication">View Indication</label>
            <input class="form-control" asp-for="ViewIndication" value="@Model.ViewIndication" />
        </div>
        <div class="form-group">
            <label asp-for="Genre">Genre</label>
            <input class="form-control" asp-for="Genre" value="@Model.Genre" />
        </div>
        <div class="form-group">
            <label asp-for="Genre">Year</label>
            <input class="form-control" asp-for="Year" value="@Model.Year" />
        </div>

        <button class="btn btn-primary" type="submit">Register</button>
    </form>
</div>