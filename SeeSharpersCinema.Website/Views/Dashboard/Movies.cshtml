@model IEnumerable<Movie>

<div>
    <div class="row"><h1>All Movies</h1></div>

    <div class="row">
        @foreach (var movie in Model)
        {
            <div class="col-2 pl-1 pr-1">
                <div class="poster_custom card m-1">
                    <a asp-action="Edit" asp-route-id="@movie.Id">
                        <img src="@movie.PosterUrl" class="img-fluid" />
                    </a>
                    <div class="p-1">
                        <p class="poster_label">@movie.Title</p>
                    </div>
                </div>
            </div>
        }
    </div>


</div>