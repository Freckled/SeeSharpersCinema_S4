@model IEnumerable<PlayList>
<div class="row"><h1>DASHBOARD: Today until Thursday</h1></div>

<div class="row">
    <a asp-controller="Dashboard" asp-action="Movies" class="btn btn-info btn-lg m-2">All movies</a>
    <a asp-controller="Notices" asp-action="Edit" asp-route-id="1" class="btn btn-danger btn-lg m-2">Edit banner</a>
    <a asp-controller="Dashboard" asp-action="Add" class="btn btn-info btn-lg m-2">Add movie</a>
</div>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-2 pl-1 pr-1">
            <div class="poster_custom card m-1">
                <img src="@item.Movie.PosterUrl" class="img-fluid" />
                <div class="p-1">
                    <p class="poster_label">@item.Movie.Title</p>
                    <p class="poster_moviestart">@item.TimeSlot.SlotStart.ToString("dddd HH:mm")</p>
                    <p class="poster_room">Zaal @item.TimeSlot.RoomId</p>
                </div>
            </div>
        </div>
    }
</div>