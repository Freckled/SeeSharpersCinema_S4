@model MovieSelectorViewModel

@{ ViewData["Title"] = "Overview"; }

<div class="row"><h1>TESTSELECTION</h1></div>
<form asp-controller="PlayList" asp-action="MoviesBySelection" method="post">
    <input type="date" name="uiDateTime" />
    <input type="text" name="userInput" />
    <button class="btn btn-outline-primary" type="submit">Filter</button>
</form>

<div class="row">

    @foreach (var item in Model.PlayLists)
    {
        <div class="col-3">
            <div class="card card-outline-primary m-1 p-1">
                <div class="card-text p-1">
                    <a asp-controller="Seat" asp-action="Selector" asp-route-movieId="@item.Id">
                        <img src="@item.Movie.PosterUrl" class="img-fluid" />
                        <p>@item.Movie.Title</p>
                        <p>Date: @item.TimeSlot.SlotStart.ToString("MM-dd-yyyy")</p>
                        <p>Time: @item.TimeSlot.SlotStart.ToString("HH:mm")</p>
                        <p>Room: @item.TimeSlot.RoomId</p>
                    </a>
                </div>
            </div>
        </div>
    }
</div>