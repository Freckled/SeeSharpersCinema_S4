@model IEnumerable<SeeSharpersCinema.Models.Program.PlayList>

<div class="row"><h1>Vandaag tot Donderdag</h1></div>
<div class="row">

    @foreach (var item in Model)
    {
        <div class="col-2 pl-1 pr-1">
            <div class="poster_custom card m-1">
                <a asp-controller="Seat" asp-action="Selector" asp-route-movieId="@item.Id">
                    <img src="@item.Movie.PosterUrl" class="img-fluid" />
                </a>
                <div class="p-1">
                    <p class="poster_label">@item.Movie.Title</p>
                    <p class="poster_moviestart">@item.TimeSlot.SlotStart.ToString("dddd HH:mm")</p>
                    <p class="poster_room">Zaal @item.TimeSlot.RoomId</p>

                </div>
            </div>
        </div>
    }
</div>